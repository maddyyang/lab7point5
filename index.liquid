<h1 class="text-2xl font-bold mb-4">JSONPlaceholder API Data</h1>

<!-- Fetch To-Do Item (simplified) -->
<div x-data="{ todo: {} }" x-init="fetch('https://jsonplaceholder.typicode.com/todos/1')
       .then(response => response.json())
       .then(json => todo = json)" class="p-6 bg-white rounded-lg shadow-md mb-4">
  <h2 class="text-xl font-semibold">To-Do Item</h2>
  <p><strong>Title:</strong> <span x-text="todo.title"></span></p>
</div>

<!-- Fetch User Data (simplified) -->
<div x-data="{ user: {} }" x-init="fetch('https://jsonplaceholder.typicode.com/users/1')
       .then(response => response.json())
       .then(json => user = json)" class="p-6 bg-white rounded-lg shadow-md mb-4">
  <h2 class="text-xl font-semibold">User Information</h2>
  <p><strong>Name:</strong> <span x-text="user.name"></span></p>
</div>

